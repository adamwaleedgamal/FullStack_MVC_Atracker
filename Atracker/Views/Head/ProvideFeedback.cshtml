@model Atracker.Models.TaskItem

@{
    ViewData["Title"] = "Provide Feedback";
    Layout = "~/Views/Shared/_HeadTrackerLayout.cshtml";
}

<div class="custom-card">
    <h2>Provide Feedback for Task: @Model.Title</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="ProvideFeedback">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="ReplyMessage" class="control-label">Feedback / Reply</label>
                    <textarea asp-for="ReplyMessage" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="ReplyMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit Feedback" class="btn btn-primary" />
                    <a asp-action="TaskDeliveryManagement" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>