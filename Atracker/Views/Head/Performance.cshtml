@model Atracker.ViewModels.ManagerReportViewModel

@{
    ViewData["Title"] = "Performance & Reports";
    Layout = "~/Views/Shared/_HeadLayout.cshtml";
}

<div class="custom-card">
    <!-- In This Day Section -->
    <h5 class="mb-3">In This Day</h5>
    <div class="row g-3">
        @if (Model.TodaysTasks.Any())
        {
            @foreach (var task in Model.TodaysTasks)
            {
                <div class="col-md-3">
                    <div class="p-3 rounded text-center" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">@task.Title</div>
                </div>
            }
        }
        else
        {
            <div class="col"><p class="text-muted fst-italic">No tasks for today.</p></div>
        }
    </div>

    <!-- Last Week Section -->
    <h5 class="mt-4 mb-3">last week</h5>
    <div class="row g-3">
        @if (Model.LastWeeksTasks.Any())
        {
            @foreach (var task in Model.LastWeeksTasks)
            {
                <div class="col-md-3">
                    <div class="p-3 rounded text-center" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">@task.Title</div>
                </div>
            }
        }
        else
        {
            <!-- THIS IS THE CORRECTED HTML for the "no tasks" message -->
            <div class="col"><p class="text-muted fst-italic">No tasks from last week.</p></div>
        }
    </div>

    <!-- Last Month Section -->
    <h5 class="mt-4 mb-3">last month</h5>
    <div class="row g-3">
        @if (Model.LastMonthsTasks.Any())
        {
            @foreach (var task in Model.LastMonthsTasks)
            {
                <div class="col-md-3">
                    <div class="p-3 rounded text-center" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">@task.Title</div>
                </div>
            }
        }
        else
        {
            <!-- THIS IS THE CORRECTED HTML for the "no tasks" message -->
            <div class="col"><p class="text-muted fst-italic">No tasks from last month.</p></div>
        }
    </div>
</div>