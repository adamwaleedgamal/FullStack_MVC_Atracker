@model Atracker.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
    Layout = "~/Views/Shared/_HeadTrackerLayout.cshtml";
}

<div class="custom-card">
    <h2>Are you sure you want to delete this task?</h2>
    <div>
        <h4>Task Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Deadline</dt>
            <dd class="col-sm-9">@Model.Deadline.ToShortDateString()</dd>
        </dl>

        <form asp-action="DeleteTaskConfirmed">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="TaskDeliveryManagement">Back to List</a>
        </form>
    </div>
</div>