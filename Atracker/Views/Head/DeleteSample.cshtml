@model Atracker.Models.WarehouseSample

@{
    ViewData["Title"] = "Delete Sample";
    Layout = "~/Views/Shared/_HeadLayout.cshtml";
}

<div class="custom-card">
    <h3 class="text-danger">Are you sure you want to delete this sample?</h3>
    <p>This action cannot be undone.</p>
    <hr />
    <div>
        <h4>Sample to be Deleted</h4>
        <p><strong>Sample Name:</strong> @Model.SampleName</p>
        <p><strong>Sample ID:</strong> @Model.SampleIdentifier</p>
    </div>

    <form asp-action="DeleteSampleConfirmed" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="WarehouseData" class="btn btn-secondary">Cancel</a>
    </form>
</div>