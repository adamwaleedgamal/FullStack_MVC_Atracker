@model Atracker.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "~/Views/Shared/_MangerLayout.cshtml";
}

<div class="custom-card">
    <h3>Edit Vehicle</h3>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditVehicle">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="VehicleIdentifier" class="control-label"></label>
                    <input asp-for="VehicleIdentifier" class="form-control" />
                    <span asp-validation-for="VehicleIdentifier" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CarType" class="control-label"></label>
                    <input asp-for="CarType" class="form-control" />
                    <span asp-validation-for="CarType" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LicensePlate" class="control-label"></label>
                    <input asp-for="LicensePlate" class="form-control" />
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AssignedDriverId" class="control-label">Assign Driver</label>
                    <select asp-for="AssignedDriverId" class="form-control" asp-items="ViewBag.Drivers"></select>
                    <span asp-validation-for="AssignedDriverId" class="text-danger"></span>
                </div>
                <hr />
                <h5>Maintenance Dates</h5>
                <div class="form-group mb-3">
                    <label asp-for="LastInspection" class="control-label"></label>
                    <input asp-for="LastInspection" type="date" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LastOilChange" class="control-label"></label>
                    <input asp-for="LastOilChange" type="date" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NextOilChange" class="control-label"></label>
                    <input asp-for="NextOilChange" type="date" class="form-control" />
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                    <a asp-action="FleetVehicleMonitoring" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>