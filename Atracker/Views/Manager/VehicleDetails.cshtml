@model Atracker.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
    Layout = "~/Views/Shared/_MangerLayout.cshtml";
}

<div class="custom-card">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-4">Fleet & Vehicle Monitoring</h2>
        <a asp-action="FleetVehicleMonitoring" class="btn btn-secondary">Back to Fleet List</a>
    </div>

    <div class="row">
        <!-- Left Column: Details -->
        <div class="col-md-6">
            <!-- Vehicle Status Card -->
            <div class="card p-3 mb-3">
                <h5 class="text-primary">Vehicle Status & Performance</h5>
                <p><strong>Vehicle ID:</strong> @Model.VehicleIdentifier</p>
                <p><strong>Car Type:</strong> @Model.CarType</p>
                <p><strong>License Plate Number:</strong> @Model.LicensePlate</p>
            </div>
            <div class="card p-3 mb-3">
                <h5 class="text-primary">Driver's Name & Contact Information</h5>
                <p><strong>Name:</strong> @Model.AssignedDriver?.FullName</p>
                <p><strong>Phone No.:</strong> @(Model.AssignedDriver?.PhoneNumber ?? "N/A")</p>
                <p><strong>Email:</strong> @Model.AssignedDriver?.Email</p>
            </div>
            <div class="card p-3">
                <h5 class="text-primary">Maintenance & Alerts</h5>
                <p><strong>Last Inspection:</strong> @Model.LastInspection.ToShortDateString()</p>
                <p><strong>Last Oil Change:</strong> @Model.LastOilChange.ToShortDateString()</p>
                <p><strong>Next Oil Change:</strong> @Model.NextOilChange.ToShortDateString()</p>
            </div>
        </div>
        <!-- Right Column: Image -->
        <div class="col-md-6">
            <!-- I have updated this with a working image link. -->
            <!-- To use your own, place an image in wwwroot/images/ and change the src -->
            <img src="~/image/delivery-truck.jpg" class="img-fluid rounded" alt="Delivery Truck" />
        </div>
    </div>
</div>