@model Atracker.ViewModels.ManagerReportViewModel

@{
    ViewData["Title"] = "All Task Reports";
    Layout = "~/Views/Shared/_MangerLayout.cshtml"; // Use the Manger layout
}

<div class="custom-card">
    <h2 class="mb-4">All Task Reports by Date</h2>

    <!-- In This Day Section -->
    <h4 class="mb-3">In This Day</h4>
    <div class="row g-3">
        @if (!Model.TodaysTasks.Any())
        {
            <p class="text-muted">No tasks for today.</p>
        }
        @foreach (var task in Model.TodaysTasks)
        {
            <div class="col-md-3"><div class="card p-2">@task.Title</div></div>
        }
    </div>

    <!-- Last Week Section -->
    <h4 class="mt-4 mb-3">Last Week</h4>
    <div class="row g-3">
        @if (!Model.LastWeeksTasks.Any())
        {
            <p class="text-muted">No tasks from last week.</p>
        }
        @foreach (var task in Model.LastWeeksTasks)
        {
            <div class="col-md-3"><div class="card p-2">@task.Title</div></div>
        }
    </div>

    <!-- Last Month Section -->
    <h4 class="mt-4 mb-3">Last Month</h4>
    <div class="row g-3">
        @if (!Model.LastMonthsTasks.Any())
        {
            <p class="text-muted">No tasks from last month.</p>
        }
        @foreach (var task in Model.LastMonthsTasks)
        {
            <div class="col-md-3"><div class="card p-2">@task.Title</div></div>
        }
    </div>
</div>