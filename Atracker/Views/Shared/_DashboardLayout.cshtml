<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Atracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <nav class="sidebar">
            <h3 class="sidebar-header">Main Menu</h3>
            <ul class="nav flex-column">
                @if (User.IsInRole("Manager") || User.IsInRole("Head") || User.IsInRole("Admin"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tasks"></i> Users & Task Management</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Fleet" asp-action="Index"><i class="fas fa-truck"></i> Fleet & Vehicle Monitoring</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index"><i class="fas fa-chart-bar"></i> Performance & Reports</a></li>
                }
                @if (User.IsInRole("Head"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="UserManagement" asp-action="Index"><i class="fas fa-users"></i> User Management</a></li>
                }
                @if (User.IsInRole("Tracker"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-route"></i> My Tasks</a></li>
                }
            </ul>
        </nav>
        <div class="main-content">
            <main role="main">
                <header class="page-header">
                    <h2 class="page-title">@ViewData["Title"]</h2>
                    <div class="logout-form">
                        <partial name="_LoginPartial" />
                    </div>
                </header>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>