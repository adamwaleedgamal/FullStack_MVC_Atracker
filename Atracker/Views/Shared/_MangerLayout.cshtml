<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3 class="sidebar-header">Manger</h3>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Manager" asp-action="UserTaskManagement" class="nav-link">Users & Task Management</a>
                </li>
                <li>
                    <a asp-controller="Manager" asp-action="FleetVehicleMonitoring" class="nav-link">Fleet & Vehicle Monitoring</a>
                </li>
                <li>
                    <a asp-controller="Manager" asp-action="Performance" class="nav-link">Report submitted</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>