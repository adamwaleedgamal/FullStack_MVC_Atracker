@model IEnumerable<Atracker.Models.Vehicle>

@{
    ViewData["Title"] = "Fleet Monitoring";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h1>Fleet Monitoring</h1>

        <!-- === THIS BUTTON NAVIGATES TO THE 'CREATE' PAGE === -->
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Vehicle
        </a>
        <!-- ====================================================== -->
    </div>

    <p>A list of all vehicles currently in the fleet.</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr class="table-light">
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CarType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LicensePlate)
                        </th>
                        <th style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => vehicle.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vehicle.CarType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => vehicle.LicensePlate)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-info btn-sm">Monitor Vehicle</a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">
                                No vehicles have been added to the fleet yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* NOTE: To use the plus icon <i class="fas fa-plus"></i>, you need to have Font Awesome linked in your _Layout.cshtml *@